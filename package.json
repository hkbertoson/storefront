{
	"name": "shop.astro.build",
	"type": "module",
	"version": "0.0.1",
	"license": "MIT",
	"engines": {
		"node": ">= 20"
	},
	"packageManager": "pnpm@10.14.0",
	"scripts": {
		"dev:ci": "doppler run pnpm openapi-ts && doppler run astro dev",
		"dev": "astro dev",
		"start": "astro dev",
		"build:ci": "pnpm openapi-ts && pnpm astro build",
		"build": "pnpm astro build",
		"astro": "astro",
		"lint": "astro sync && run-s --continue-on-error lint:*",
		"lint:biome": "biome lint src",
		"lint:astro": "astro check",
		"lint:types": "tsc -b",
		"test:e2e": "playwright test",
		"test:unit": "vitest",
		"format": "run-s --continue-on-error format:*",
		"format:biome": "biome check . --apply",
		"format:prettier": "prettier . --cache --write --list-different"
	},
	"devDependencies": {
		"@astrojs/check": "0.9.4",
		"@biomejs/biome": "^2.1.4",
		"@hey-api/openapi-ts": "^0.80.5",
		"@types/node": "^24.2.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.6.2",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-jsdoc": "^1.3.3",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"typescript": "^5.9.2",
		"vite": "^6.3.5",
		"vite-plugin-tsconfig-paths": "^1.4.1",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@astrojs/netlify": "^6.0.0",
		"@astrojs/solid-js": "^5.0.0",
		"@astrojs/tailwind": "6.0.2",
		"@fontsource-variable/inter": "5.2.6",
		"@hey-api/client-fetch": "^0.13.1",
		"@kobalte/core": "0.13.11",
		"@kobalte/tailwindcss": "0.9.0",
		"@playwright/test": "^1.54.2",
		"@sentry/astro": "^10.2.0",
		"@tailwindcss/typography": "0.5.16",
		"@tanstack/solid-query": "^5.83.1",
		"@tanstack/solid-query-devtools": "^5.84.0",
		"@total-typescript/ts-reset": "^0.6.1",
		"astro": "^5.12.8",
		"astro-icon": "^1.1.5",
		"solid-icons": "^1.1.0",
		"solid-js": "^1.9.8",
		"stripe": "18.4.0",
		"tailwind-merge": "3.3.1",
		"tailwindcss": "^4.1.11",
		"tailwindcss-animate": "^1.0.7",
		"type-fest": "^4.41.0",
		"zod": "^3.25.76"
	}
}
